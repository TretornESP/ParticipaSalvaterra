<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <solid android:color="#E6E6E6" >
    </solid>

    <!-- If you want to add some padding -->
    <padding
        android:bottom="3dp"
        android:left="10dp"
        android:right="10dp"
